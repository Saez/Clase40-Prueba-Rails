<div class="row">
    <div class="col-md-6">
        <a href="<%= pages_batman_path %>">
            <img src="<%= asset_path 'batman.jpg' %>" alt="" class="img-responsive"/>
        </a>
    </div>
    <div class="col-md-6">
        <a href="<%= pages_superman_path %>">
            <img src="<%= asset_path 'superman.jpg' %>" alt="" class="img-responsive"/>
        </a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <% if flash[:notice] %>
            <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
        <% end %>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>Batman</h2>
        <form action="<%= pages_save_votos_batman_path %>" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1">Name</label>
                <input type="text" class="form-control" id="name1" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Email</label>
                <input type="email" class="form-control" id="email1" name="email" placeholder="Email">
            </div>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <button type="submit" class="btn btn-default">Guardar</button>
        </form>
        <p class="bg-primary">La cantidad de votos es: <%= @votos_batman.count %></p>
    </div>
    <div class="col-md-6">
        <h2>Superman</h2>
        <form action="<%= pages_save_votos_superman_path %>" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1">Name</label>
                <input type="text" class="form-control" id="name2" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Email</label>
                <input type="email" class="form-control" id="email2" name="email" placeholder="Email">
            </div>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <button type="submit" class="btn btn-default">Guardar</button>
        </form>
        <p class="bg-primary">La cantidad de votos es: <%= @votos_superman.count %></p>
    </div>
</div>
